__getspace()
{
    for i in $(seq 1 $1) ; do echo -n ' ';
    done
}

__getprompt()
{
    PWD=$(basename $(pwd))
    echo "$(__getspace $(expr $(tput cols) - ${#PWD} - 1))${PWD}"
}

