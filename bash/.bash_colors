##include dat in .bashrc

if [ "..${TERM}" != ".." ]; then
    #echo $TERM
    COLORSNUM=$(tput colors)
    if [ "..${COLORSNUM}" != ".." ]; then
        if [ "$COLORSNUM" -eq 256 ]; then
            ##========== 256 colors =======##
            #echo "[ colors: 256 ]"
            REDFG=$(tput setaf 160)
            REDBG=$(tput setab 160)

            DREDFG=$(tput setaf 52)
            DREDBG=$(tput setab 52)

            REDFGBG=$(tput setab 52;tput setaf 196)

            GREEN=$(tput setaf 112)
            GREENFGBG=$(tput setab 58;tput setaf 154)

            BLUE=$(tput setaf 38)

            YELLOW=$(tput setaf 220)
            YELLOWFGBG=$(tput setab 94;tput setaf 220)

            ORANGE=$(tput setaf 208)

        else
            ##== 8 colors ================##
            #echo "[ colors: 8 ]"
            RED=$(tput setaf 1)
            GREEN=$(tput setaf 2)
            BLUE=$(tput setaf 6)
            YELLOW=$(tput setaf 3)
            ORANGE=$(tput setaf 3)
        fi

        ## clearing tput settings
            NC=$(tput sgr0)

        ## text color reverting
            REV=$(tput rev)
            SOMON=$(tput smso)
            SOMOF=$(tput rmso)

        ## cursor hiding
            HCON=$(tput civis)
            HCOF=$(tput cnorm)
    fi
    ## echo "[ TERM empty ]"
fi



##[==================================]##
__print_color_line()
{
    for _i in $(seq $1 $2 ) ; do tput setaf $_i ; echo -n " ${SOMON}  ${SOMOF}"
        if (( $_i == 7 )) || ((( $_i == 15 )) || (( $_i > 15 )) && (( ($_i-15) % 6 == 0 ))); then echo "" ; fi
    done
}

##[==================================]##
__print_colors_oneline()
{
    for _i in $(seq 0 $(expr $(tput colors) - 1) ) ; do tput setaf $_i ; echo -n " $(tput smso)  $(tput rmso)" ; if (( $_i == 7 )) || ((( $_i == 15 )) || (( $_i > 15 )) && (( ($_i-15) % 6 == 0 ))); then echo "" ; fi ; done
}

##[==================================]##
#check colors
__colors_checker()
{
    echo "colors: $(tput colors)"
    if [ -x /usr/bin/tput ]; then
        echo "${NC}[ START ]"
        __print_color_line "0" "$(expr $(tput colors) - 1)"
        echo "${NC}[ END ]"
    fi
}
