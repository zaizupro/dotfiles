                ORANGE=$(tput setaf 3)
            fi

            ## clearing tput settings
            NC=$(tput sgr0)

            ## text color reverting
            REV=$(tput rev)
            SOMON=$(tput smso)
            SOMOF=$(tput rmso)

            ## cursor hiding
            HCON=$(tput civis)
            HCOF=$(tput cnorm)
        fi
        ## echo "[ TERM empty ]"
    fi
