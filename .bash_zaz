# ====colors for scripst============
COLORSNUM=$(tput colors)
if [ "$COLORSNUM" -eq 256 ]; then
    #==========256 colors =======
    RED=$(tput setaf 160)
    GREEN=$(tput setaf 112)
    BLUE=$(tput setaf 38)
    YELLOW=$(tput setaf 220)
    ORANGE=$(tput setaf 208)
    NC=$(tput sgr0)
    REV=$(tput rev)
else
    #==8 colors ================
    RED=$(tput setaf 1)
    GREEN=$(tput setaf 2)
    BLUE=$(tput setaf 6)
    YELLOW=$(tput setaf 3)
    ORANGE=$(tput setaf 3)
    NC=$(tput sgr0)
    REV=$(tput rev)
fi


