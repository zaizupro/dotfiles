__currentTTY()
{
#echo `tty | sed -e "s:/dev/::"`
temp=$(tty) ; echo ${temp:5}
}

__printor()
{
    TERMCOLS=$(tput cols)

    MSG=${1}
    MSGLNGTH=${#MSG}
    STARTLINE=$(printf "%-$((${TERMCOLS}/2 - ${MSGLNGTH}/2))s" "*")
    STLNLNGTH=${#STARTLINE}
    ENDLINE=$(printf "%-$((${TERMCOLS} - (${STLNLNGTH} + ${MSGLNGTH})))s" "*")

    echo $YELLOW"${STARTLINE// /*}"$GREEN${MSG}$YELLOW"${ENDLINE// /*}"$NC
}

__printfulline()
{
    TERMCOLS=$(tput cols)
    FULLLINE=$(printf "%-${TERMCOLS}s" "*")
    echo `tput setaf 3`"${FULLLINE// /*}"`tput sgr0`
}





