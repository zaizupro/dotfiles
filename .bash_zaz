alias gitusers="git shortlog | grep -E '^[^ ]'"

alias ta='tmux attach -t'
alias tn='tmux new -s'
alias tls='tmux ls'
alias tk='tmux kill-session -t'


alias makepass='openssl rand -base64 12'
alias vm='startVM.sh'

