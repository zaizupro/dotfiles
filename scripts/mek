#!/bin/bash
#toilet -f future -t "START `date +%T`"

TERMCOLS=$(tput cols)
v=$(printf "%-${TERMCOLS}s" "*")
echo "${v// /*}"
date
echo "${v// /*}"

MKSTARTDATE=$(date +%s)
makek.sh
#toilet -f future -t "STOP  `date +%T`"

MKENDDATE=$(date +%s)

BTMSG="BUILDED IN $((${MKENDDATE} - ${MKSTARTDATE})) SECONDS!"
BTMSGLNGTH=`expr "${BTMSG}" : '.*'`

vv=$(printf "%-$((${TERMCOLS}/2 - ${BTMSGLNGTH}/2))s" "*")

echo "${v// /*}"
echo "${vv// /*}"`tput setaf 2`${BTMSG}`tput sgr0`"${vv// /*}"



echo "${v// /*}"
echo `date`
echo "${v// /*}"
