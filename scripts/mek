#!/bin/bash

if [ -f ~/.bash_zaz ]; then
   source ~/.bash_zaz
fi


declare -a TMPMSG
TMPMSG=("AT $(__currentTTY)" "$(date '+%A %R:%S %d.%m.%Y')")
__blockprintor TMPMSG[@] ${YELLOWFGBG} " BUILDING STARTED "


MKSTARTDATE=$(date +%s)
makek.sh
#|  sed "s/^/[$YELLOW$(date +%T)$NC]/"
RESULT=$?
MKENDDATE=$(date +%s)

if [ $RESULT -eq 0 ]; then
    MKRESULT="BUILDING COMPLETED"
    COLOR=("${GREENFGBG}")
else
    MKRESULT="BUILDING FAILED"
    COLOR=("${REDFGBG}")
fi


TMPMSG=("IN $((${MKENDDATE} - ${MKSTARTDATE})) SECONDS!!!" "$(date '+%A %R:%S %d.%m.%Y')")
__blockprintor TMPMSG[@] $(echo ${COLOR}) " ${MKRESULT} "
