#!/bin/bash

if [ -f ~/.bash_zaz ]; then
   source ~/.bash_zaz
fi


HEADERMSG=${1^^}
if [ -z ${HEADERMSG} ]; then
    HEADERMSG="BUILDING"
fi

declare -a TMPMSG
TMPMSG=("AT $(__currentTTY)" "$(date '+%A %R:%S %d.%m.%Y')")
__blockprintor TMPMSG[@] "${YELLOWFGBG}" " ${HEADERMSG} STARTED "


MKSTARTDATE=$(date +%s)
makek.sh "$@"
#|  sed "s/^/[$YELLOW$(date +%T)$NC]/"
RESULT=$?
MKENDDATE=$(date +%s)

if [ $RESULT -eq 0 ]; then
    MKRESULT="COMPLETED"
    COLOR=("${GREENFGBG}")
else
    MKRESULT="FAILED"
    COLOR=("${REDFGBG}")
fi


TMPMSG=("IN $((${MKENDDATE} - ${MKSTARTDATE})) SECONDS!!!" "$(date '+%A %R:%S %d.%m.%Y')")
__blockprintor TMPMSG[@] "$(echo ${COLOR})" " ${HEADERMSG} ${MKRESULT} "

exit $RESULT
